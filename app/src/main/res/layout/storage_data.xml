<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/fondito"
            android:orientation="vertical"
            android:padding="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dip"
                android:layout_row="1"
                android:background="@drawable/border_shadow"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"

                    android:gravity="center_horizontal"
                    android:text="VersiÃ³n de la banda"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/BandVer"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/BandHR"
                    android:layout_column="0"

                    android:gravity="center_horizontal"
                    android:text="Version"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"

                    android:gravity="center_horizontal"
                    android:text="Firmware de la banda"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/BandFVer"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/BandVer"
                    android:layout_column="0"

                    android:gravity="center_horizontal"
                    android:text="Firmware"
                    android:textSize="15dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dip"
                android:layout_row="2"
                android:background="@drawable/border_shadow"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"

                    android:gravity="center_horizontal"
                    android:paddingTop="15dp"
                    android:text="Pulso (beats por minuto)"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/BandHR"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"

                    android:gravity="center_horizontal"
                    android:text="Heart Rate"
                    android:textSize="15dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dip"
                android:layout_row="3"
                android:background="@drawable/border_shadow"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"

                    android:gravity="center_horizontal"
                    android:text="Temperatura de la piel (grados C)"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/BandTemp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/BandHR"
                    android:layout_column="0"

                    android:gravity="center_horizontal"
                    android:text="Skin Temp"
                    android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dip"
                android:layout_row="4"
                android:background="@drawable/border_shadow"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="9"
                    android:gravity="center_horizontal"
                    android:paddingTop="15dp"
                    android:text="Acelerometro"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/BandAccelX"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"

                    android:gravity="center_horizontal"
                    android:text="X"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/BandAccelY"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_column="0"

                    android:gravity="center_horizontal"
                    android:text="Y"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/BandAccelZ"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"

                    android:gravity="center_horizontal"
                    android:text="Z"
                    android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dip"
                android:layout_row="5"
                android:background="@drawable/border_shadow"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="13"
                    android:gravity="center_horizontal"
                    android:text="Giroscopio (Vel. Angular)"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/BandGyroX"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="14"
                    android:gravity="center_horizontal"
                    android:text="X"
                    android:textIsSelectable="false"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/BandGyroY"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="15"
                    android:gravity="center_horizontal"
                    android:text="Y"
                    android:textIsSelectable="false"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/BandGyroZ"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="16"
                    android:gravity="center_horizontal"
                    android:text="Z"
                    android:textIsSelectable="false"
                    android:textSize="15dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dip"
                android:layout_row="6"
                android:background="@drawable/border_shadow"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="17"
                    android:gravity="center_horizontal"
                    android:paddingTop="15dp"
                    android:text="UV Index Nivel"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/BandUV"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="18"
                    android:gravity="center_horizontal"
                    android:text="UV Reading"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="17"
                    android:gravity="center_horizontal"
                    android:paddingTop="15dp"
                    android:text="RR Interval Nivel"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/BandRRInterval"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="18"
                    android:gravity="center_horizontal"
                    android:text="RRInterval Reading"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_margin="8dp"
                android:layout_row="7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblCielo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="18"
                    android:gravity="center_horizontal"
                    android:text="Cielo"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/lblTemperatura"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="18"
                    android:gravity="center_horizontal"
                    android:text="Temperatura"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/lblHumedad"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="18"
                    android:gravity="center_horizontal"
                    android:text="Humedad"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/btnEliminarListener"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/boton_redondo"
                    android:text="Elim. Listener" />

                <Button
                    android:id="@+id/modif"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/boton_redondo"
                    android:text="Modificar" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/acercade"
                    android:text="Back"/>

            </LinearLayout>
        </GridLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>